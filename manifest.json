{
  "name": "Live work hour",
  "version": "1.0",
  "manifest_version": 3,
  "description": "An extension for hrone users who needs realtime work hours completed",
  "icons": {
    "48": "chronometer.png"
  },
  "content_scripts": [
    {
      "matches": ["https://app.hrone.cloud/*"],
      "js": ["content-script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "xhr-response-interceptor.js",
        "style.css",
        "refresh-icon.svg"
      ],
      "matches": ["https://app.hrone.cloud/*"]
    }
  ]
}
